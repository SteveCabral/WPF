<Window x:Class="ThanksgivingGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThanksgivingGames"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Thanksgiving Family Games"
        WindowState="Maximized"
        Background="{DynamicResource BackgroundBrush}">

  <Window.Resources>
    <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
  </Window.Resources>

  <DockPanel>
        <!-- 🎮 Game Selection Menu -->
        <Border DockPanel.Dock="Top" Background="{DynamicResource PanelBrush}" Padding="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Game 1" Width="100" Height="35" 
                        Command="{Binding SelectGameCommand}" 
                        CommandParameter="Game 1" 
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button Content="Game 2" Width="100" Height="35"
                        Command="{Binding SelectGameCommand}"
                        CommandParameter="Game 2"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button Content="Game 3" Width="100" Height="35"
                        Command="{Binding SelectGameCommand}"
                        CommandParameter="Game 3"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button Content="Game 4" Width="100" Height="35"
                        Command="{Binding SelectGameCommand}"
                        CommandParameter="Game 4"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button Content="Game 5" Width="100" Height="35"
                        Command="{Binding SelectGameCommand}"
                        CommandParameter="Game 5"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button Content="Toggle Theme" Width="120" Height="35"
                        Margin="20,0,0,0"
                        Background="{DynamicResource ButtonBrush}"
                        Foreground="White"
                        Click="ToggleTheme_Click"/>
            </StackPanel>
        </Border>

        <!-- 🧱 Main Content Area (Leaderboard + Game Display) -->
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Leaderboard Panel -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Background="{DynamicResource BackgroundBrush}">
              <DockPanel Margin="10">

                <!-- 🏆 Leaderboard Header -->
                <TextBlock Text="Leaderboard"
                            Foreground="{DynamicResource ForegroundDark}"
                            FontSize="20"
                            Margin="0,0,0,8"
                            DockPanel.Dock="Top"/>

                <!-- 🧾 Player List -->
                <ListView x:Name="PlayerListView"
                          ItemsSource="{Binding Players}"
                          DockPanel.Dock="Top"
                          BorderThickness="0"
                          Background="{DynamicResource BackgroundBrush}"
                          Foreground="{DynamicResource ForegroundBrush}">
                  <ListView.View>
                    <GridView>
                      <GridViewColumn Header="Place" Width="60">
                        <GridViewColumn.CellTemplate>
                          <DataTemplate>
                            <TextBlock Text="{Binding Place}"
                                       HorizontalAlignment="Center"/>
                          </DataTemplate>
                        </GridViewColumn.CellTemplate>
                      </GridViewColumn>

                      <GridViewColumn Header="Player" Width="130"
                                      DisplayMemberBinding="{Binding Name}"/>

                      <GridViewColumn Header="Points" Width="120">
                        <GridViewColumn.CellTemplate>
                          <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                              <Button Content="−"
                                      Width="25" Height="25"
                                      Margin="0,0,4,0"
                                      Background="{DynamicResource BorderBrush}"
                                      Foreground="White"
                                      Click="DecrementPoints_Click"
                                      Tag="{Binding}" />
                              <TextBlock Text="{Binding Points}"
                                         Width="30"
                                         TextAlignment="Center"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource ForegroundDark}"/>
                              <Button Content="+"
                                      Width="25" Height="25"
                                      Margin="4,0,0,0"
                                      Background="{DynamicResource BorderBrush}"
                                      Foreground="White"
                                      Click="IncrementPoints_Click"
                                      Tag="{Binding}" />
                            </StackPanel>
                          </DataTemplate>
                        </GridViewColumn.CellTemplate>
                      </GridViewColumn>
                    </GridView>
                  </ListView.View>
                </ListView>

                <!-- ➕ Player Management Controls -->
                <StackPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">

                  <!-- Add Player Row -->
                  <StackPanel Orientation="Horizontal">
                    <Grid Width="150" Height="25" Margin="0,0,8,0">
                      <TextBox x:Name="NewPlayerNameBox"
                               VerticalContentAlignment="Center"
                               Background="{DynamicResource TextBoxBackgroundBrush}"
                               Foreground="{DynamicResource TextBoxForegroundBrush}"/>
                      <TextBlock Text="Enter name"
                                 Foreground="Gray"
                                 Margin="5,0,0,0"
                                 VerticalAlignment="Center"
                                 IsHitTestVisible="False"
                                 Visibility="{Binding Text, ElementName=NewPlayerNameBox,
                                    Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                    <Button Content="+ Add Player"
                            Width="100"
                            Height="25"
                            Background="{DynamicResource BorderBrush}"
                            Foreground="White"
                            Click="AddPlayer_Click"/>
                  </StackPanel>

                  <!-- Manage Player Row -->
                  <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Button Content="🗑 Remove Selected"
                            Width="150"
                            Height="25"
                            Background="#552222"
                            Foreground="White"
                            Click="RemovePlayer_Click"/>
                    <Button Content="🔁 Reset Scores"
                            Width="120"
                            Height="25"
                            Margin="8,0,0,0"
                            Background="#224455"
                            Foreground="White"
                            Click="ResetScores_Click"/>
                  </StackPanel>

                </StackPanel>

              </DockPanel>
            </Border>

          <!-- Game Display Area -->
            <Border Grid.Column="1" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="2,0,0,0" 
                Background="{DynamicResource BackgroundBrush}" Padding="10">
                
                <Grid>
                    <StackPanel>
                        <!-- Dynamic Game Title -->
                        <TextBlock Text="{Binding CurrentGameTitle}" 
                           Foreground="{DynamicResource TextBlockForegroundBrush}" 
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,10"/>

                        <Image x:Name="QrCodeImage"
                           Width="180" Height="180"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>

                        <!-- Dynamic Game Content -->
                        <ContentControl Content="{Binding CurrentGameContent}" 
                            Margin="0,40,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>