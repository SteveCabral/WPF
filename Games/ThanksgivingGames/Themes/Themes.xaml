<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 🎨 Dark Theme -->
    <SolidColorBrush x:Key="BackgroundDark" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ForegroundDark" Color="#EAEAEA"/>
    <SolidColorBrush x:Key="PanelDark" Color="#2C2C2C"/>
    <SolidColorBrush x:Key="BorderDark" Color="#333"/>

    <!-- ☀️ Light Theme -->
    <SolidColorBrush x:Key="BackgroundLight" Color="#F2F2F2"/>
    <SolidColorBrush x:Key="ForegroundLight" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="PanelLight" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BorderLight" Color="#CCC"/>

</ResourceDictionary>
