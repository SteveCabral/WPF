<Window x:Class="ThanksgivingGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThanksgivingGames"
        mc:Ignorable="d"
        Title="Thanksgiving Family Games"
        WindowState="Maximized"
        Background="#1E1E1E">

    <DockPanel>
        <!-- 🎮 Game Selection Menu -->
        <Border DockPanel.Dock="Top" Background="#2C2C2C" Padding="8" BorderBrush="#333" BorderThickness="0,0,0,2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Game 1" Width="100" Height="35" 
                        Command="{Binding SelectGameCommand}" 
                        CommandParameter="Game 1" 
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button Content="Game 2" Width="100" Height="35"
                        Command="{Binding SelectGameCommand}"
                        CommandParameter="Game 2"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button Content="Game 3" Width="100" Height="35"
                        Command="{Binding SelectGameCommand}"
                        CommandParameter="Game 3"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button Content="Game 4" Width="100" Height="35"
                        Command="{Binding SelectGameCommand}"
                        CommandParameter="Game 4"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                <Button Content="Game 5" Width="100" Height="35"
                        Command="{Binding SelectGameCommand}"
                        CommandParameter="Game 5"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
            </StackPanel>
        </Border>

        <!-- 🧱 Main Content Area (Leaderboard + Game Display) -->
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Leaderboard Panel -->
            <Border Grid.Column="0" 
                    BorderBrush="#333" BorderThickness="0,0,2,0" 
                    Background="#2C2C2C" Padding="10">
                <DockPanel>
                    <TextBlock Text="Leaderboard"
                               FontWeight="Bold"
                               FontSize="22"
                               Margin="5 10"
                               DockPanel.Dock="Top"
                               Foreground="#FFD700" />

                    <!-- Player List -->
                    <ListView ItemsSource="{Binding Players}" Margin="0,10,0,0"
                              Background="#2C2C2C" Foreground="#EAEAEA"
                              BorderThickness="0"
                              FontSize="16"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#3A3D41"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#3A3D41"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FFFFFF"/>
                        </ListView.Resources>

                        <ListView.View>
                            <GridView>

                                <!-- Place Column -->
                                <GridViewColumn Header="Place" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Place}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Player Column -->
                                <GridViewColumn Width="140">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="Player" HorizontalAlignment="Left" Margin="4,0,0,0"/>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Left" Margin="4,0,0,0"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Points Column -->
                                <GridViewColumn Header="Points" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Points}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </Border>

            <!-- Game Display Area -->
            <Border Grid.Column="1" 
                    BorderBrush="#333" BorderThickness="2,0,0,0" 
                    Background="#1E1E1E" Padding="10">
                <Grid>
                    <StackPanel>
                        <!-- Dynamic Game Title -->
                        <TextBlock Text="{Binding CurrentGameTitle}" 
                                   Foreground="#FFD700" 
                                   FontSize="26"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,10"/>

                        <!-- Placeholder area for game content -->
                        <TextBlock Text="Game Area Placeholder"
                                   Foreground="#EAEAEA"
                                   FontSize="22"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Opacity="0.6"
                                   Margin="0,50,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
